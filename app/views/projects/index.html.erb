<%- title 'Projects' -%>

<div class="well">
  <%= link_to 'Create project...', new_resource_path, :class => "btn primary" %>
</div>

<%- if collection.empty? -%>
  
  <h4 align="center">You haven't created any projects yet! <%= link_to "Create a project now", new_resource_path %>...</h4>
  
<% else %>

  <table class="zebra-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <%= render collection %>
    </tbody>
  </table>
  
<%- end -%>